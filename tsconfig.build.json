{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib/typescript",
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "sourceMap": false
    // Убираем baseUrl и paths - они не нужны для output
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "lib",
    "example",
    "**/__tests__",
    "**/__fixtures__",
    "**/__mocks__",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}
