{
  "name": "react-native-openai-realtime",
  "version": "0.1.7",
  "description": "Easy-to-use React Native library for integrating OpenAI Realtime API voice conversations",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "types": "./lib/typescript/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "npm --prefix example run",
    "test": "jest --passWithNoTests",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli lib",
    "release": "release-it --only-version",
    "prepare": "bob build && tsc-alias -p tsconfig.alias.json --outDir lib/typescript",
    "fix-aliases": "node ./scripts/fix-aliases.js"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "openai",
    "webrtc",
    "voice-chat",
    "realtime-api"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Space6188/react-native-openai-realtime.git"
  },
  "author": "Space6188 <barabashnazarx@gmail.com> (https://github.com/Space6188)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Space6188/react-native-openai-realtime/issues"
  },
  "homepage": "https://github.com/Space6188/react-native-openai-realtime#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "event-target-shim": "^6.0.2",
    "react-native-webrtc": "^124.0.7"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@evilmartians/lefthook": "^1.12.3",
    "@react-native/babel-preset": "0.81.1",
    "@react-native/eslint-config": "^0.81.1",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.12",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "babel-plugin-module-resolver": "^5.0.2",
    "commitlint": "^19.8.1",
    "del-cli": "^6.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-ft-flow": "^3.0.11",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-native": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-native-builder-bob": "^0.40.13",
    "release-it": "^19.0.4",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ],
    "moduleNameMapper": {
      "^@react-native-openai-realtime/(.*)$": "<rootDir>/src/$1"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true,
          "babelrc": false,
          "configFile": "./babel.config.js"
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "create-react-native-library": {
    "languages": "js",
    "type": "library",
    "version": "0.54.7"
  }
}
